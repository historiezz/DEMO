<Window x:Class="WpfApp1.Windows.ServiceEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Windows"
        mc:Ignorable="d"
        Title="ServiceEditWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="340*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <TextBlock FontFamily="Comic Sans MS" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" >Расходные материалы</TextBlock>
        <Rectangle Fill="#76e383" Grid.Row="1" />
        <Grid Grid.Row="1">
            <Frame x:Name="AdminFrame" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2"></Frame>
        </Grid>
        <Button  x:Name="CloseBtn" Click="CloseBtn_Click" Background="#FF498C51" HorizontalAlignment="Right" Width="100" FontFamily="Comic Sans MS" Height="25" Margin="25 0">Выход</Button>
    </Grid>
</Window>
